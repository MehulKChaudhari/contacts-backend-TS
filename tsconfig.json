{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "checkJs": false
  },

  "exclude": ["node_modules"],
  "include": ["./**/*.ts", "src/index.js"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
